<nav class="navbar navbar-expand-lg navbar-light bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#" style ="color:white">RDEC</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/student/add/page" style ="color:white">Add Student</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" style ="color:white">List Student</a>
        </li>
       
       
      </ul>
    </div>
  </div>
</nav>
<div class ="container">
    <div class="alert text-center bg-success my-3 " style="color:white">
        <h5>Student List</h5>
      </div>
</div>
<div class="container">
    <table class="table text-center">
        <thead>
            <tr>
              <th>Student Photo</th>
                <th>Roll No</th>
                <th>Student Name</th>   
                <th>Father Name</th> 
                <th>Mother Name</th>
                <th>Course</th>
                <th>Branch</th>   
                <th>Actions</th>        
            </tr>
        </thead>
        <tbody>
            <% students.forEach((student) =>{ %>
                <tr>
                  <td><img src="<%= student.studentImage%>"width="50px"height="50px"></img></td>
                    <td><%= student.rollNo%></td>
                    <td><%= student.studentName%></td>
                    <td><%= student.fatherName%></td>
                    <td><%= student.motherName%></td>
                    <td><%= student.course%></td>
                    <td><%= student.branch%></td>
                    <td>
                        <a href="/edit/student/page/<%= student._id %>"class="btn btn-warning">
                          <img src="/images/icons/edit.png"alt="Edit"width="30"height="30">
                        </a>
                        <a href="/delete/student/<%= student._id %>"class="btn btn-danger">
                          <img src="/images/icons/delete.png"alt="Delete"width="30"height="30">
                        </a>
                    </td>
                </tr>
                
            <% }) %>
        </tbody>
    </table>
</div>



